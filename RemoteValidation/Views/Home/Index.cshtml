@{
    ViewData["Title"] = "Home Page";
}
@model RemoteValidation.Models.UserForm
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<form asp-controller="Home" asp-action="Index" method="post">
    <div class="table">
        <div class="row">
            <div class="col-md-3">
                @*<label for="@Model.UserName"></label>*@
                <input asp-for="@Model.UserName" class="form-control" type="text" />
                <span asp-validation-for="@Model.UserName"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @*<label for="@Model.EmailId"></label>*@

                <input class="form-control" type="email" />
                <span asp-validation-for="@Model.EmailId"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @*<label for="@Model.Password"></label>*@
                <input class="form-control" type="password" />
                <span asp-validation-for="@Model.Password"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @*<label for="@Model.Password"></label>*@
                <input class="form-control" type="password" />
                <span asp-validation-for="@Model.ConfirmPassword"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @*<label for="@Model.Password"></label>*@
                <input class="form-control btn-dark" type="submit" />
                
            </div>
        </div>
</div>
</form>
